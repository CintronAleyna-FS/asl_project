{% extends 'layouts/base.twig' %}


{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/public/style.css">
{% endblock %}

{% block title %} {{product.title}} - {{ variant.title}}{% endblock %}

{% block main_content %}
	<div class='container p-6 mt-10 max-w-4xl m-auto h-auto flex flex-row justify-between space-x-2'>
		<hr>
		<a href="/store/products/{{product.slug}}" class='mr-6 space-x-4'>
			<img class="height-300 m-auto" src="/public/images/{{ variant.Images[0].id }}{{ variant.Images[0].extension }}">
		</a>
		<div class='container p-4 max-w-4xl m-auto flex flex-col flex-wrap'>
			<div class='flex flex-col txt-big-purp'>
				<p class='p-1 text-3xl'>{{product.title}} - {{variant.title}}</p>
				<p class='p-1 text-xl'>ID: {{variant.id}}</p>
			</div>
			<hr>
			<div class='container m-auto ml-10 p-3 flex flex-row flex-wrap'>
				<p class='p-2'>Options: </p>
				{% for variant in product.Variants %}
				<a href="/store/products/{{product.slug}}?v={{variant.slug}}" class='mr-6 space-x-4'>
					{% for image in variant.Images %}
					<img class="h-10" src="/public/images/{{ image.id }}{{ image.extension }}">
					{% endfor %}
				</a>
				{% endfor %}
			</div>
			<hr>	
			<p class='p-1'>Description: {{variant.description}}</p>
			<p class='p-1'>Price: ${{variant.price}}</p>
			{% if variant.inventory < 10 %}
				<p class='p-1'>In Stock: Almost sold out! </p>
			{% else %}
				<p class='p-1'>In Stock: In-Stock! </p>
			{% endif %}
			<div class='p-1'>
				<label>Quantity</label>
				<input type="quantity" placeholder="1" class='w-1/2 p-2'></input>
			</div>
			<button class='cart-btn p-1 w-1/2'>Add to Cart</button>
		</div>
	</div>
{% endblock %}
