{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>All Products:</h2>
    <ul>
        {% for product in products %}
            <li>
                {{ product.title }} - 
                <a href='/products/{{ product.id }}/edit'>Edit</a>
                <a href='/products/{{ product.id }}/delete'>Delete</a>
            </li>
        {% endfor %}
    </ul>
    <p><a href='/products/new'>Create New Shoe<a/></p>
{% endblock %}