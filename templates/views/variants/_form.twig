<form method="POST" action="/variants/{% if variant.id  %}{{ variant.id }}{% endif %}">
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}">
    {% endif %}
    <div>
        <label for="title">title:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}"/>
    </div>
    <div>
        <label for="slug">slug:</label>
        <input type="text" name="slug" id="slug" value="{{ variant.slug }}"/>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="{{ variant.price }}"/>
    </div>
    <div>
        <label for="inventory">Inventory:</label>
        <input type="number" name="inventory" id="inventory" value="{{ variant.inventory }}"/>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea name="description" id="description" value="{{ variant.description }}">{{ variant.description }}</textarea>
    </div>
    <div>
        <label>Product:</label>
        <select name="productId">
            {% for product in products %}
                <option 
                value='{{ product.id}}'
                {% if product.id == variant.productId %}
                    selected='selected'
                {% endif %}
                >{{product.title}} 
                </option>
            {% endfor %}
        </select>
    </div>
    <div>
        <input type="submit" name="submit"/>
    </div>
</form>